{
  "training": {
    "total_steps": 200000,
    "update_interval": 2048,
    "batch_size": 256,
    "gamma": 0.995,
    "gae_lambda": 0.95,
    "clip_range": 0.2,
    "vf_coef": 0.5,
    "ent_coef": 0.001,
    "learning_rate": 0.0003,
    "max_grad_norm": 0.5,
    "checkpoint_interval": 10000,
    "opponent_refresh_interval": 5000,
